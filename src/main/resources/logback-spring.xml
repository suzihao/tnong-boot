<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 1. 定义公共属性 -->
    <property name="APP_NAME" value="tnong-boot"/>
    <property name="LOG_PATH" value="./logs/${APP_NAME}"/>
    <property name="MAX_HISTORY" value="30"/>
    <property name="MAX_FILE_SIZE" value="100MB"/>
    <property name="HOSTNAME" value="${HOSTNAME:-unknown}"/>

    <!-- ========== Appender 定义 ========== -->

    <!-- Appender 1: 开发环境控制台 (可读性高的文本格式) -->
    <appender name="DEV_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <!-- 这是关键：开发环境使用 PatternLayoutEncoder -->
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %highlight(%-5level) %cyan(%logger{36}) - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- Appender 2: 生产环境控制台 (JSON格式) -->
    <appender name="PROD_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp>
                    <fieldName>@timestamp</fieldName>
                    <pattern>yyyy-MM-dd'T'HH:mm:ss.SSS'Z'</pattern>
                    <timeZone>UTC</timeZone>
                </timestamp>
                <version>
                    <fieldName>@version</fieldName>
                </version>
                <logLevel>
                    <fieldName>level</fieldName>
                </logLevel>
                <loggerName>
                    <fieldName>logger</fieldName>
                </loggerName>
                <threadName>
                    <fieldName>thread</fieldName>
                </threadName>
                <message/>
                <stackTrace/>
                <mdc/>
                <context>
                    <fieldName>app</fieldName>
                    <customFields>{"app_name":"${APP_NAME}", "hostname":"${HOSTNAME}"}</customFields>
                </context>
            </providers>
        </encoder>
    </appender>

    <!-- Appender 3: 滚动文件 (所有环境都输出JSON，便于收集) -->
    <appender name="ROLLING_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/application.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/application-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>${MAX_FILE_SIZE}</maxFileSize>
            <maxHistory>${MAX_HISTORY}</maxHistory>
            <totalSizeCap>10GB</totalSizeCap>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp>
                    <fieldName>@timestamp</fieldName>
                    <pattern>yyyy-MM-dd'T'HH:mm:ss.SSS'Z'</pattern>
                    <timeZone>UTC</timeZone>
                </timestamp>
                <version>
                    <fieldName>@version</fieldName>
                </version>
                <logLevel>
                    <fieldName>level</fieldName>
                </logLevel>
                <loggerName>
                    <fieldName>logger</fieldName>
                </loggerName>
                <threadName>
                    <fieldName>thread</fieldName>
                </threadName>
                <message/>
                <stackTrace/>
                <mdc/>
                <context>
                    <fieldName>app</fieldName>
                    <customFields>{"app_name":"${APP_NAME}", "hostname":"${HOSTNAME}"}</customFields>
                </context>
            </providers>
        </encoder>
    </appender>

    <!-- ========== 按环境配置 ========== -->
    <!-- 关键：使用 <springProfile> 标签，这是Spring Boot原生支持的 -->

    <!-- 开发环境 (dev) -->
    <springProfile name="dev">
        <root level="INFO">
            <!-- 控制台：文本格式 -->
            <appender-ref ref="DEV_CONSOLE"/>
            <!-- 文件：JSON格式 (保留，方便偶尔检查JSON结构) -->
            <appender-ref ref="ROLLING_FILE"/>
        </root>
    </springProfile>

    <!-- 生产环境 (prod) -->
    <springProfile name="prod">
        <root level="INFO">
            <!-- 控制台：JSON格式 -->
            <appender-ref ref="PROD_CONSOLE"/>
            <!-- 文件：JSON格式 -->
            <appender-ref ref="ROLLING_FILE"/>
        </root>
    </springProfile>

    <!-- 默认配置（当未指定profile时兜底，可设为开发或生产风格） -->
    <springProfile name="!dev &amp; !prod">
        <root level="INFO">
            <appender-ref ref="DEV_CONSOLE"/>
            <appender-ref ref="ROLLING_FILE"/>
        </root>
    </springProfile>

    <!-- ========== 其他Logger级别配置 ========== -->
    <!-- 这些配置对所有环境生效 -->
    <logger name="com.tnong.tnongboot" level="DEBUG"/>
    <logger name="org.springframework" level="WARN"/>
    <logger name="org.hibernate" level="WARN"/>
    <logger name="com.zaxxer.hikari" level="INFO"/>
</configuration>